---
import Button from "../Button.astro";
import SocialLinks from "../SocialLinks.astro";
---

<section id="hero" class="grid grid-cols-5">
  <div class="text-center md:text-start col-span-3 px-24 pb-48 pt-32">
    <div class="mb-8">
      <h1 class="text-6xl font-medium mb-2.5" data-aos="fade-up">
        I'm Yahya Eddhissa
      </h1>
      <h2
        class="font-normal text-gray-400 text-2xl"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        I'm a Full-Stack Software Engineer
      </h2>
    </div>
    <div
      class="flex flex-col md:flex-row md:gap-6 gap-4 items-center justify-center md:justify-normal"
      data-aos="fade-up"
      data-aos-delay="600"
    >
      <div class="flex-none">
        <Button>View Projects</Button>
      </div>
      <div class="h-0 w-10 border-t md:border-gray-500 border-gray-900"></div>
      <SocialLinks />
    </div>
  </div>
  <div
    class="w-full divide-y divide-gray-800 h-full flex pr-28 flex-col col-span-2 items-center justify-center"
  >
    <div class="py-8" data-aos="fade-up" data-aos-delay="900">
      <div class="uppercase font-medium text-base mb-4">about me</div>
      <div class="text-gray-400 mb-4 text-sm">
